<html>
  <head>
    <title></title>
    <style>
      .test {
        position: relative;
        left: 10px;
        display: inline-block;
        width: auto;
        height: auto;
        transition: background 0.5s;
        transition: color 0.4s;
        padding: 5px;
        transition-timing-function: ease-in;
        cursor: pointer;
      }
      
      .test:hover {
        color: white;
        background: black;
      }
    </style>
  </head>
  <body style="font-family: Courier New, monospace; font-weight: bold;">
    <p>
      Welcome
    </p>
    <div class="test">Good</div>
    <br>
    <div class="test">Bad</div>
    <br>
    <div class="test">Neutral</div>
  </body>
</html>
